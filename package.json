{
	"name": "pijs",
	"version": "2.0.0-alpha.1",
	"description": "Graphics and sound library",
	"main": "build/pi.js",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"build": "node scripts/build.js",
		"build:alpha-0": "node scripts/build.js alpha-0",
		"build:alpha-1": "node scripts/build.js alpha-1",
		"test": "playwright test test/scripts/run-visual-tests.js",
		"test:grep": "playwright test test/scripts/run-visual-tests.js --grep",
		"test:plugins": "set PI_TEST_TYPE=plugins&& playwright test test/scripts/run-visual-tests.js",
		"test:plugins:grep": "set PI_TEST_TYPE=plugins&& playwright test test/scripts/run-visual-tests.js --grep",
		"server": "node server.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AndyStubbs/pijs"
	},
