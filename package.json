	"bugs": {
		"url": "https://github.com/AndyStubbs/pijs/issues"
	},
	"homepage": "https://www.pijs.org",
	"engines": {
		"node": ">=18.0.0"
	},
	"devDependencies": {
		"@iarna/toml": "^2.2.3",
		"@playwright/test": "^1.56.0",
		"esbuild": "^0.25.10",
		"pngjs": "^7.0.0"
	}
